# C-blok
#include<stdio.h>
int main()
{
float toplam=0.0;
int n;
printf("arrayda ka√ß adet sayi bulunmasini istersiniz ");
scanf("%d",&n);
int sayilar[n];
for(int i=0;i<n;i++){
	printf("bir sayi giriniz");
	scanf("%d",&sayilar[i]);
}
for(int i=0;i<n;i++){
toplam=toplam+sayilar[i];
}
printf("%f",toplam/n);
}
